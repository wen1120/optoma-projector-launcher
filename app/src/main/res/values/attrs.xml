<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FocusView">
        <attr name="layoutOffsetX" format="dimension" />
        <attr name="layoutOffsetY" format="dimension" />
        <attr name="offsetWidth" format="dimension" />
        <attr name="offsetHeight" format="dimension" />
        <attr name="animDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="OMenuItem">
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="OMenuItemWithToggle" parent="OMenuItem">
        <attr name="isOn" format="boolean" />
    </declare-styleable>

    <declare-styleable name="OMenuItemWithText" parent="OMenuItem">
        <attr name="label" format="string" />
    </declare-styleable>

    <declare-styleable name="OPicker">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="visibleItemCount" format="integer" />
    </declare-styleable>

</resources>
