<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    android:orientation="vertical">
    <com.optoma.launcher001.TitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="48dp"
        app:srcCompat="@drawable/optomalogo"
        android:scaleType="center" >
    </android.support.v7.widget.AppCompatImageView>
    <RelativeLayout
        android:id="@+id/home_is"
        android:layout_width="112dp"
        android:layout_height="128dp"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="230dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/home_is_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_source"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="14dp"
            android:scaleType="center"
            app:srcCompat="@drawable/projectorsetup"></android.support.v7.widget.AppCompatImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/home_input_source"
            android:textSize = "16sp"
            android:textColor="@color/transparent"
            android:textStyle="bold"
            android:fontFamily="sans-serif">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_settings"
        android:layout_width="112dp"
        android:layout_height="128dp"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="374dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/home_settings_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_setting"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="22dp"
            app:srcCompat="@drawable/settings"
            android:scaleType="center" >
        </android.support.v7.widget.AppCompatImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/home_settings"
            android:textSize = "16sp"
            android:textColor="@color/transparent"
            android:textStyle="bold"
            android:fontFamily="sans-serif">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_ds"
        android:layout_width="112dp"
        android:layout_height="128dp"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="518dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/home_ds_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_setting"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="22dp"
            app:srcCompat="@drawable/settings"
            android:scaleType="center" >
        </android.support.v7.widget.AppCompatImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/home_display_settings"
            android:textSize = "16sp"
            android:textColor="@color/transparent"
            android:textStyle="bold"
            android:fontFamily="sans-serif">
        </TextView>
    </RelativeLayout>
</RelativeLayout>