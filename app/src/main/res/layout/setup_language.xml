<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:background="@drawable/backgroundhome">

    <RelativeLayout
        android:id="@+id/ly_menu"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp">

        <GridLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/menu_line"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/uf_position" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/input_source"
                android:layout_marginLeft="7dp"
                app:srcCompat="@drawable/f_language" />

        </GridLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/menu_line"
            android:layout_width="254dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:columnCount="7"
        android:rowCount="4">

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="112dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#8A8D8F"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#8A8D8F"
                android:textSize="20sp" />
        </LinearLayout>

    </GridLayout>


</RelativeLayout>