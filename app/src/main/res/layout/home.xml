<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:background="@drawable/bg_tekapo"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="27dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:src="@drawable/optomalogo" />

            <TextView
                android:id="@+id/home_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="48dp"
                android:layout_marginTop="27dp"
                android:layout_weight="1"
                android:clickable="false"
                android:text="10:09"
                android:textColor="#D0D3D4"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/clock_line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/home_clock"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/home_clock"
                android:layout_below="@+id/home_clock"
                android:layout_marginRight="48dp"
                android:text="TextView"
                android:textColor="#D0D3D4" />

        </RelativeLayout>

        <TextView
            android:id="@+id/home_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/header"
            android:layout_gravity="right"
            android:layout_marginRight="48dp"
            android:layout_weight="1"
            android:text="FRI 30 DEC"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <GridLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/menu_line"
            android:layout_centerInParent="false"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/menu_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/menu_apps"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                android:src="@drawable/home_menu_position" />

            <ImageButton
                android:id="@+id/menu_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                android:src="@drawable/home_menu_apps" />

            <ImageButton
                android:id="@+id/menu_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                android:src="@drawable/home_menu_inputsource" />

            <ImageButton
                android:id="@+id/menu_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/shortcut_is1"
                android:layout_alignRight="@+id/shortcut_is1"
                android:layout_marginLeft="7dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                android:src="@drawable/home_menu_language" />

        </GridLayout>

        <TextView
            android:id="@+id/menu_line"
            android:layout_width="254dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shortcut"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroundhome"
        android:orientation="horizontal"
        android:clipChildren="false">

        <Space
            android:layout_height="match_parent"
            android:layout_width="80dp"/>

        <ImageView
            android:id="@+id/shortcut_app1"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:adjustViewBounds="false"
            android:background="@drawable/corner_shortcut_app"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/vga"/>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageView
            android:id="@+id/shortcut_app2"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:adjustViewBounds="false"
            android:background="@drawable/corner_shortcut_app"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/vga"/>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageView
            android:id="@+id/shortcut_app3"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:adjustViewBounds="false"
            android:background="@drawable/corner_shortcut_app"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/vga"/>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageView
            android:id="@+id/shortcut_app4"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:adjustViewBounds="false"
            android:background="@drawable/corner_shortcut_app"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/vga"/>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:id="@+id/shortcut_app5"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/corner_shortcut_input_source"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shortcut_is1_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="11"
                android:adjustViewBounds="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside"
                android:src="@drawable/hdmi" />

            <TextView
                android:id="@+id/shortcut_is1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/shortcut_is1_img"
                android:layout_centerInParent="true"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="HMDI1"
                android:textAlignment="center"
                android:textColor="#B2FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:id="@+id/shortcut_app6"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/corner_shortcut_input_source"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shortcut_is2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="11"
                android:adjustViewBounds="false"
                android:elevation="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside"
                android:src="@drawable/vga" />

            <TextView
                android:id="@+id/shortcut_is2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/shortcut_is2_img"
                android:layout_centerInParent="true"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="VGA"
                android:textAlignment="center"
                android:textColor="#B2FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:id="@+id/shortcut_app7"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/corner_shortcut_setup"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shortcut_setup_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="11"
                android:adjustViewBounds="false"
                android:elevation="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/shortcut_setup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/shortcut_setup_img"
                android:layout_centerInParent="true"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Settings"
                android:textAlignment="center"
                android:textColor="#B2FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:id="@+id/shortcut_app8"
            android:layout_width="112dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/corner_shortcut_setup"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shortcut_psetup_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="11"
                android:adjustViewBounds="false"
                android:elevation="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside"
                android:src="@drawable/hdmi" />

            <TextView
                android:id="@+id/shortcut_psetup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/shortcut_psetup_img"
                android:layout_centerInParent="true"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Projector Setup"
                android:textAlignment="center"
                android:textColor="#B2FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_height="match_parent"
            android:layout_width="80dp"/>

    </LinearLayout>


</RelativeLayout>