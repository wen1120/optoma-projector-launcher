    <RelativeLayout
    android:id="@+id/setting_power"
    android:layout_width="112dp"
    android:layout_height="128dp"
    android:layout_below="@+id/setting_divider"
    android:layout_marginTop="38dp"
    android:layout_marginLeft="662dp">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/setting_power_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_setting"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="22dp"
        app:srcCompat="@drawable/power"
        android:scaleType="center" >
    </android.support.v7.widget.AppCompatImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/setting_power"
        android:textSize = "16sp"
        android:textColor="@color/transparent"
        android:textStyle="bold"
        android:fontFamily="sans-serif">
    </TextView>
</RelativeLayout>
