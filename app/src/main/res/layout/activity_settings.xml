        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/home_settings"
        android:textSize = "45sp"
        android:textColor="#40FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif">
    </TextView>
    <View
        android:id="@+id/setting_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="66dp"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/setting_tv_upper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="48dp"
        android:text="@string/setting_power_title"
        android:textSize = "18sp"
        android:textColor="#d0d3d4"
        android:fontFamily="sans-serif">
    </TextView>
    <TextView
        android:id="@+id/setting_tv_upper_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginLeft="48dp"
        android:text="@string/setting_power_content"
        android:textSize = "24sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif">
    </TextView>

    <TextView
        android:id="@+id/setting_tv_middle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="286dp"
        android:layout_marginLeft="48dp"
        android:visibility="invisible"
        android:text="middle_title"
        android:textSize = "18sp"
        android:textColor="#d0d3d4"
        android:fontFamily="sans-serif">
    </TextView>
    <TextView
        android:id="@+id/setting_tv_middle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:layout_marginLeft="48dp"
        android:visibility="invisible"
        android:text="middle_content"
        android:textSize = "24sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif">
    </TextView>

    <TextView
        android:id="@+id/setting_tv_lower_title"
