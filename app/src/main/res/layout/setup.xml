<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@color/primary_black_transparent">

    <TextView
        android:id="@+id/projector_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/projector_setup"
        android:textSize = "45sp"
        android:textColor="#40FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif">
    </TextView>

    <View
        android:id="@+id/projector_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/shortcut_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:orientation="horizontal">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/menu_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="18dp"
        />

</LinearLayout>