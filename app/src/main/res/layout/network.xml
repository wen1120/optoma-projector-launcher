<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="480dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="64dp"
        android:background="@drawable/setting_background"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_iv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="24dp"
            android:scaleType="fitStart"
            android:alpha="0.25"
            app:srcCompat="@drawable/network">
        </android.support.v7.widget.AppCompatImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="74dp"
            android:gravity="left"
            android:text="@string/setting_network"
            android:textSize = "45sp"
            android:textColor="#40FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_wifi_main_view"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/setting_1st_bg"
            android:visibility="visible">
        </View>
        <View
            android:id="@+id/network_wifi_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="true">
        </View>
        <TextView
            android:id="@+id/network_wifi_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:text="@string/network_wifi"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_wifi_iv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="91dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:scaleType="center"
            app:srcCompat="@drawable/off">
        </android.support.v7.widget.AppCompatImageView>
        <View
            android:id="@+id/network_wifi_divider"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/network_wifi_view"
            android:layout_alignBottom="@+id/network_connection_mode_content_tv"
            android:layout_marginLeft="53dp"
            android:background="@color/transparent" />
        <View
            android:id="@+id/network_ssid_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_wifi_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_ssid_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_wifi_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_ssid"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <TextView
            android:id="@+id/network_ssid_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_wifi_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="right|center_vertical"
            android:text="None"
            android:textSize = "18sp"
            android:textColor="#004b87"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_connection_mode_view"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@+id/network_ssid_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/setting_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_connection_mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_ssid_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_connection_mode"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_connection_mode_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_connection_mode_tv"
            android:layout_marginLeft="72dp"
            android:gravity="center"
            android:scaleType="center"
            app:srcCompat="@drawable/left_arrow427">
        </android.support.v7.widget.AppCompatImageView>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_connection_mode_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_connection_mode_tv"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:scaleType="center"
            app:srcCompat="@drawable/right_arrow427">
        </android.support.v7.widget.AppCompatImageView>
        <TextView
            android:id="@+id/network_connection_mode_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_connection_mode_tv"
            android:layout_toRightOf="@+id/network_connection_mode_left_arrow"
            android:layout_toLeftOf="@+id/network_connection_mode_right_arrow"
            android:gravity="center|center_vertical|center_horizontal"
            android:text="Infrastruction"
            android:textSize = "18sp"
            android:textColor="#004b87"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_lan_main_view"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:layout_below="@+id/network_wifi_main_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/setting_1st_bg"
            android:visibility="visible">
        </View>
        <View
            android:id="@+id/network_lan_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_wifi_main_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="true">
        </View>
        <TextView
            android:id="@+id/network_lan_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_wifi_main_view"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:text="@string/network_lan"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_lan_iv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_wifi_main_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:scaleType="center"
            app:srcCompat="@drawable/on">
        </android.support.v7.widget.AppCompatImageView>
        <View
            android:id="@+id/network_lan_divider"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/network_lan_view"
            android:layout_alignBottom="@+id/network_reset_tv"
            android:layout_marginLeft="53dp"
            android:background="@color/transparent" />
        <View
            android:id="@+id/network_dhcp_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_lan_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="true">
        </View>
        <TextView
            android:id="@+id/network_dhcp_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_lan_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_dhcp"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_dhcp_iv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_lan_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:scaleType="center"
            app:srcCompat="@drawable/on">
        </android.support.v7.widget.AppCompatImageView>
        <View
            android:id="@+id/network_ip_address_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_dhcp_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_ip_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_dhcp_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_ip_address"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <TextView
            android:id="@+id/network_ip_address_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_dhcp_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="right|center_vertical"
            android:text="192.168.0.2"
            android:textSize = "18sp"
            android:textColor="#004b87"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_subnet_mask_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_ip_address_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_subnet_mask_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_ip_address_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_subnet_mask"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <TextView
            android:id="@+id/network_subnet_mask_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_ip_address_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="right|center_vertical"
            android:text="255.255.255.0"
            android:textSize = "18sp"
            android:textColor="#004b87"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_gateway_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_subnet_mask_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_gateway_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_subnet_mask_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_gateway"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <TextView
            android:id="@+id/network_gateway_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_subnet_mask_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="right|center_vertical"
            android:text="192.168.0.254"
            android:textSize = "18sp"
            android:textColor="#004b87"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_dns_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_gateway_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_dns_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_gateway_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_dns"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <TextView
            android:id="@+id/network_dns_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_gateway_view"
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="right|center_vertical"
            android:text="192.168.0.1"
            android:textSize = "18sp"
            android:textColor="#004b87"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_reset_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_dns_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="false">
        </View>
        <TextView
            android:id="@+id/network_reset_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_dns_view"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/network_reset"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
        <View
            android:id="@+id/network_test_network_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/network_lan_main_view"
            android:layout_marginLeft="24dp"
            android:background="@drawable/system_selected"
            android:focusable="true">
        </View>
        <TextView
            android:id="@+id/network_test_network_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/network_lan_main_view"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:text="@string/network_test_network"
            android:textSize = "18sp"
            android:textColor="#d0d3d4"
            android:fontFamily="sans-serif">
        </TextView>
    </RelativeLayout>
</RelativeLayout>
